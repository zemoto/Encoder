<UserControl x:Class="Encoder.Filters.Video.Encode.EncodeVideoFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:filters="clr-namespace:Encoder.Filters"
             xmlns:local="clr-namespace:Encoder.Filters.Video.Encode"
             xmlns:uiUtils="clr-namespace:Encoder.UIUtils"
             mc:Ignorable="d"
             x:Name="Root"
             d:DataContext="{d:DesignInstance Type={x:Type local:EncodeVideoFilterViewModel}}">

   <Grid Margin="0,0,0,8">

      <filters:FilterPropertyControl Label="File Format">
         <ComboBox ItemsSource="{uiUtils:GetEnumValues {x:Type local:VideoFileFormat}}"
                   SelectedValue="{Binding FileFormat}"
                   Width="100" />
      </filters:FilterPropertyControl>

   </Grid>
</UserControl>