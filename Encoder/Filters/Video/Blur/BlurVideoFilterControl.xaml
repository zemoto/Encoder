<UserControl x:Class="Encoder.Filters.Video.Blur.BlurVideoFilterControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:filters="clr-namespace:Encoder.Filters"
             xmlns:local="clr-namespace:Encoder.Filters.Video.Blur"
             xmlns:uiUtils="clr-namespace:Encoder.UIUtils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type local:BlurVideoFilterViewModel}}">

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      
      <filters:FilterPropertyControl Grid.Row="0"
                                     Label="Horizontal Radius:">
         <TextBox Text="{uiUtils:IntMinMaxBinding HorizontalRadius, 0, 10000}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="1"
                                     Label="Vertial Radius:">
         <TextBox Text="{uiUtils:DoubleMinMaxBinding VerticalRadius, 0, 10000}" />
      </filters:FilterPropertyControl>
      
    </Grid>
</UserControl>
