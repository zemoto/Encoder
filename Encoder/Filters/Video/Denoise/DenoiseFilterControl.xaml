<UserControl x:Class="Encoder.Filters.Video.Denoise.DenoiseFilterControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:filters="clr-namespace:Encoder.Filters"
             xmlns:local="clr-namespace:Encoder.Filters.Video.Denoise"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type local:DenoiseFilterViewModel}}">

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      
      <TextBlock Grid.Row="0"
                 TextWrapping="Wrap"
                 Margin="8,0,8,8"
                 Text="Threshold A is designed to react on abrupt changes in the input signal and threshold B is designed to react on continuous changes in the input signal." />

      <filters:FilterPropertyControl Grid.Row="1"
                                     Label="Threshold 0A:">
         <TextBox Text="{Binding ZeroA}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="2"
                                     Label="Threshold 0B:">
         <TextBox Text="{Binding ZeroB}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="3"
                                     Label="Threshold 1A:">
         <TextBox Text="{Binding OneA}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="4"
                                     Label="Threshold 1B:">
         <TextBox Text="{Binding OneB}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="5"
                                     Label="Threshold 2A:">
         <TextBox Text="{Binding TwoA}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="6"
                                     Label="Threshold 2B:">
         <TextBox Text="{Binding TwoB}" />
      </filters:FilterPropertyControl>
      
      <filters:FilterPropertyControl Grid.Row="7"
                                     Label="Frames to Average:">
         <TextBox Text="{Binding FramesToAverage}" />
      </filters:FilterPropertyControl>

   </Grid>
</UserControl>
