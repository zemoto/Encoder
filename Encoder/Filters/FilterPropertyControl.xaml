<UserControl x:Class="Encoder.Filters.FilterPropertyControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:filters="clr-namespace:Encoder.Filters"
             mc:Ignorable="d">
   
   <UserControl.Resources>
      <ResourceDictionary Source="FilterPropertyDictionary.xaml" />
   </UserControl.Resources>

   <UserControl.Template>
      <ControlTemplate TargetType="{x:Type filters:FilterPropertyControl}">
         <Grid>
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="135" />
               <ColumnDefinition Width="8" />
               <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
       
            <TextBlock Grid.Column="0"
                       Margin="0,4"
                       VerticalAlignment="Center"
                       Text="{TemplateBinding Label}" />
       
            <ContentPresenter Grid.Column="2" 
                              Content="{TemplateBinding Content}" />

         </Grid>
      </ControlTemplate>
   </UserControl.Template>
</UserControl>
